<div class="main-search-container centered">
  <div class="main-search-inner">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= form_tag search_vehicles_path(vehicle_type: "all"), method: :get do %>
          <div style="background: #00000054; padding: 50px;">
            <h2 style="color:white">
              Find Nearby Cars
            </h2>
            <h4 style="color:white">Explore top-rated attractions, activities and more</h4>
          </div>
          <div class="main-search-input">
            <div class="main-search-input-item">
              <%= text_field_tag :name, nil, placeholder: "What are you looking for?"%>
            </div>

            <div class="main-search-input-item location">
              <div id="autocomplete-container">
                <%= text_field_tag :location, nil, placeholder: "Location"%>
              </div>
              <a href="#"><i class="fa fa-map-marker"></i></a>
            </div>

              <%= submit_tag "Search" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="fullwidth padding-top-75 padding-bottom-75" data-background-color="#f9f9f9" style="background: rgb(249, 249, 249);">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <h3 class="headline centered margin-bottom-50">
          Browse by category
        </h3>
      </div>
    </div>

    <div class="row">
      <% VehicleType.active.each do |vt| %>
        <div class="col-md-2">
          <%= link_to search_vehicles_path(vt.name.try(:downcase)), class: "blog-compact-item-container" do %>
            <div class="blog-compact-item">
              <%= image_tag "car_categories/#{vt.name}.jpg" %>

              <div class="blog-compact-item-content">
                <ul class="blog-post-tags">
                  <li><%= vt.name %></li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>